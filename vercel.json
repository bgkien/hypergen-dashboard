{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist",
        "buildCommand": "npm ci && npm run clean:install && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://pipl-ai-dashboard-f2a0f689cbf5.herokuapp.com",
    "VITE_APP_DOMAIN": "https://hypergeniogrowth.com"
  }
}